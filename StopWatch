# Algorithm:     Create a stop watch program using classes and objects.

import time

def main():
    print("This program outputs how long, in milliseconds it takes to add up",\
          "numbers starting at 1 to 1,000,000.")
    print()

    go = StopWatch()
    
    go.start()
    if go.isRunning() == True:
        for i in range(1, 1000001):
            i += i
    else:
        print("The stop watch is not running.")
    go.end()
    print("The loop time is", int(go.getElapsedTime()), "milliseconds.")
    

class StopWatch():

    def __init__(self):
        __self.startTime = 0
        __self.endTime = 0
        __self.running = False

    def getStartTime(self):
        return self.startTime

    def getEndTime(self):
        return self.endTime

    def getElapsedTime(self):
        return (self.endTime - self.startTime)*1000

    def start(self):
        self.running = True
        self.startTime = time.time()    

    def end(self):
        self.running = False
        self.endTime = time.time()


    def isRunning(self):
        if self.running == True:
            return True
        else:
            return False
        

main()
